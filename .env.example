
# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure values
# DO NOT commit .env to version control
# ============================================

# Application Environment
ASPNETCORE_ENVIRONMENT=Development

# ============================================
# POSTGRESQL CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YourSecurePasswordHere123!
POSTGRES_DB=ComplementaryServicesDB

# ============================================
# RABBITMQ CONFIGURATION
# ============================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ============================================
# KEYCLOAK CONFIGURATION
# ============================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=AdminPassword123!
KEYCLOAK_DB_PASSWORD=KeycloakDBPassword123!
KEYCLOAK_REALM=eventplatform
KEYCLOAK_CLIENT_ID=complementary-services

# ============================================
# MONGODB CONFIGURATION (for logs)
# ============================================
MONGO_USER=admin
MONGO_PASSWORD=MongoPassword123!

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN_1=http://localhost:3000
CORS_ORIGIN_2=http://localhost:5173

# ============================================
# OPTIONAL: Production overrides
# ============================================
# Uncomment and set for production deployments
# ASPNETCORE_ENVIRONMENT=Production
# ASPNETCORE_HTTPS_PORT=443
# POSTGRES_HOST=postgres-prod.example.com
# RABBITMQ_HOST=rabbitmq-prod.example.com
# KEYCLOAK_URL=https://auth.example.com